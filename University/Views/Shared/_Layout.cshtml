
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="icon" href="~/img/favicon.png" type="image/png" />
    <title>University</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/bootstrap.css" />
    <link rel="stylesheet" href="~/vendors/linericon/style.css" />
    <link rel="stylesheet" href="~/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/themify-icons.css" />
    <link rel="stylesheet" href="~/vendors/owl-carousel/owl.carousel.min.css" />
    <link rel="stylesheet" href="~/vendors/lightbox/simpleLightbox.css" />
    <link rel="stylesheet" href="~/vendors/nice-select/css/nice-select.css" />
    <link rel="stylesheet" href="~/vendors/animate-css/animate.css" />
    <link rel="stylesheet" href="~/vendors/jquery-ui/jquery-ui.css" />
    <!-- main css -->
    <link rel="stylesheet" href="~/css/style.css" />

    <link rel="stylesheet" href="~/css/responsive.css" />
    <style>
        .footer {
            background-color: #0a4279;
            color: white;
            padding: 20px 0;
        }
        .footer h5{
            color: white !important;
        }
            .footer a {
                color: white;
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>

<body>
    <!--================Header Menu Area =================-->
    <header class="header_area">
        <div class="main_menu">
            <div class="container">
                <nav class="navbar navbar-expand-lg navbar-light w-100">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <a class="navbar-brand logo_h" asp-controller="Home" asp-action="Index">
                        <img style="width:65px;" src="~/img/logo-truong.png" alt="Logo">
                    </a>
                    <button class="navbar-toggler"
                            type="button"
                            data-toggle="collapse"
                            data-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent"
                            aria-expanded="false"
                            aria-label="Toggle navigation">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse offset w-100"
                         id="navbarSupportedContent">
                        <div class="row w-100 mr-0">
                            <div class="col-lg-7 pr-0">
                                <ul class="nav navbar-nav center_nav pull-right">
                                    <li class="nav-item active">
                                        <a asp-controller="Home" asp-action="Index" class="nav-link">Trang chủ</a>
                                    </li>
                                    <li class="nav-item active">
                                        <a asp-controller="Home" asp-action="Post" class="nav-link">Tin Tức</a>
                                    </li>
                                    <li class="nav-item active">
                                        <a asp-controller="Home" asp-action="Announcements" class="nav-link">Thông Báo</a>
                                    </li>
                                    <li class="nav-item active dropdown">
                                        <a href="#" class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Lịch
                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                            <a class="dropdown-item" asp-controller="Home" asp-action="WeekSchedule">Lịch tuần</a>
                                            <a class="dropdown-item" asp-controller="Home" asp-action="TeachingSchedule">Lịch dạy</a>
                                            <a class="dropdown-item" asp-controller="Home" asp-action="HolidaySchedule">Lịch nghỉ</a>
                                        </div>
                                    </li>
                                </ul>
                            </div>

                            <div class="col-lg-5 pr-0">
                                <ul class="nav navbar-nav navbar-right right_nav pull-right">


                                  @{
                                        if (!User.Identity.IsAuthenticated)
                                        {

                                    <li class="nav-item">
                                        <a asp-controller="Home" asp-action="Login" class="icons">
                                            <i class="ti-user" aria-hidden="true"></i>
                                        </a>
                                    </li>

                                        }
                                    }
                                    @{
                                        if (User.Identity.IsAuthenticated)
                                        {
                                            <li class="nav-item active dropdown">
                                        <a href="#" class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    <i class="ti-user" aria-hidden="true"></i>
                                        </a>
                                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                                <a class="dropdown-item " asp-controller="Home" asp-action="Manage">Quản lý</a>
                                                <a asp-controller="Home" asp-action="Logout" class="dropdown-item">Đăng xuất</a>
                                            </div>
                                           </li>

                                          
                                        }
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </header>

    @RenderBody()
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <h5>ĐÀO TẠO</h5>
                    <ul class="list-unstyled">
                        <li><a href="#">CHƯƠNG TRÌNH ĐÀO TẠO</a></li>
                        <li><a href="#">QUY CHẾ, QUY ĐỊNH</a></li>
                        <li><a href="#">WEBSITE ĐÀO TẠO</a></li>
                        <li><a href="#">WEBSITE TUYỂN SINH</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5>TÀI NGUYÊN</h5>
                    <ul class="list-unstyled">
                        <li><a href="#">TÀI NGUYÊN SỐ</a></li>
                        <li><a href="#">WEBSITE THƯ VIỆN</a></li>
                        <li><a href="#">E-LEARNING</a></li>
                        <li><a href="#">HỌC BỔNG - VIỆC LÀM</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5>QUY ĐỊNH CHUNG</h5>
                    <ul class="list-unstyled">
                        <li><a href="#">QUY CHẾ TỔ CHỨC VÀ HOẠT ĐỘNG</a></li>
                        <li><a href="#">QUY CHẾ BỔ NHIỆM</a></li>
                        <li><a href="#">QUY ĐỊNH CẤP XÉT HỌC BỔNG</a></li>
                        <li><a href="#">QUY CHẾ CHI TIÊU NỘI BỘ</a></li>
                        <li><a href="#">QUY CHẾ DÂN CHỦ</a></li>
                        <li><a href="#">DANH MỤC VỊ TRÍ VIỆC LÀM</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5>KẾT NỐI ĐẾN TRƯỜNG</h5>
                    <ul class="list-unstyled">
                        <li><a href="#">FACEBOOK</a></li>
                        <li><a href="#">WIKIPEDIA</a></li>
                        <li><a href="#">YOUTUBE</a></li>
                        <li><a href="#">LIÊN HỆ</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="~/js/jquery-3.2.1.min.js"></script>
    <script src="~/js/popper.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/stellar.js"></script>
    <script src="~/vendors/lightbox/simpleLightbox.min.js"></script>
    <script src="~/vendors/nice-select/js/jquery.nice-select.min.js"></script>
    <script src="~/vendors/isotope/imagesloaded.pkgd.min.js"></script>
    <script src="~/vendors/isotope/isotope-min.js"></script>
    <script src="~/vendors/owl-carousel/owl.carousel.min.js"></script>
    <script src="~/js/jquery.ajaxchimp.min.js"></script>
    <script src="~/js/mail-script.js"></script>
    <script src="~/vendors/jquery-ui/jquery-ui.js"></script>
    <script src="~/vendors/counter-up/jquery.waypoints.min.js"></script>
    <script src="~/vendors/counter-up/jquery.counterup.js"></script>
    <script src="~/js/theme.js"></script>
</body>
</html>
