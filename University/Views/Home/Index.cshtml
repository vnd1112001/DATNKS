

@model University.Models.Post

@{
    ViewData["Title"] = "Home Page";
}
<style>
    .li {
        border-bottom: 1px solid #e7e7e7;
        padding-bottom: 10px;
        margin-bottom: 10px;
        width:90%;
    }
    img{
        width:100%;
    }
</style>
<div class="banner" style="text-align: center;background-color: red;border-radius: 160px;">
    <img style="

    width: 100%;

" src="~/img/banner2.jpg" />
</div>
<div class="container" style="margin-top:100px">
    <div class="row">
        <!-- Danh sách bài viết -->
        <div class="col-md-4">
            <h3><i class="fa fa-newspaper-o" aria-hidden="true"></i> Tin tức & Sự kiện</h3>
            @foreach (var post in ViewData["Posts"] as List<University.Models.Post>)
            {
                <div class="row mb-3 li">
                    <div class="col-md-4">
                        <img src="/img/@post.PostImage" class="img-fluid" alt="Post Image">
                    </div>
                    <div class="col-md-8">
                        <a href="/Home/PostDetail/@post.PostId">
                            <h4>@post.Title</h4>
                       
                        <p>Date: @post.PublishedDate</p></a>
                    </div>
                </div>
            }
        </div>

        <!-- Danh sách thông báo -->
        <div class="col-md-4">
            <h3><i class="fa fa-bell-o" aria-hidden="true"></i> Thông báo</h3>
            @foreach (var announcement in ViewData["Announcements"] as List<University.Models.Announcement>)
            {
                <div class="row mb-3 li">
                    <div class="col-md-4">
                        <p>Date: @announcement.PublishedDate</p>
                    </div>
                    <div class="col-md-8">
                        <a href="/Home/AnnouceDetail/@announcement.AnnouncementId"><h4>@announcement.Title</h4></a>
                    </div>
                </div>
            }
        </div>
        <!-- Phần hiển thị hình ảnh -->
        <div class="col-md-4">
            <div class="pb-3 embed-responsive embed-responsive-16by9">
                <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/6Vp2JlpgSZE" allowfullscreen></iframe>
            </div>
            <img class="pb-3 pt-3" src="~/img/link1.jpg"/>
            <img src="~/img/link3.jpg" />
        </div>
    </div>
</div>
