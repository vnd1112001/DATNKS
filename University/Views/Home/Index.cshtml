

@model University.Models.Post

@{
    ViewData["Title"] = "Home Page";
}
<style>
    .li {
        border-bottom: 1px solid #e7e7e7;
        padding-bottom: 10px;
        margin-bottom: 10px;
        width: 90%;
    }

    img {
        width: 100%;
    }

    .carousel-item img{
        height:400px;
    }
    .card-custom {
        margin-bottom: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s;
    }

        .card-custom:hover {
            transform: scale(1.05);
        }

    .card-header-custom {
        background-color: #f8f9fa;
        border-bottom: 1px solid #e7e7e7;
        border-radius: 10px 10px 0 0;
        padding: 15px;
    }

    .card-body-custom {
        padding: 15px;
    }

    .section-title {
        margin-bottom: 20px;
        font-size: 1.5rem;
        color: #343a40;
    }
</style>
<div id="bannerCarousel" class="carousel slide" data-ride="carousel" data-interval="2000">
    <ol class="carousel-indicators">
        <li data-target="#bannerCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#bannerCarousel" data-slide-to="1"></li>
        <li data-target="#bannerCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" style="text-align: center; background-color: red; ">
        <div class="carousel-item active">
            <img src="~/img/banner.jpg" class="d-block " alt="First slide">
        </div>
        <div class="carousel-item">
            <img src="~/img/bannerspkt2.jpg" class="d-block " alt="Second slide">
        </div>
        <div class="carousel-item">
            <img src="~/img/banner.jpg" class="d-block" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#bannerCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#bannerCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="container" style="margin-top:100px">
    <div class="row">
        <!-- Danh sách bài viết -->
        <div class="col-md-4">
            <h3><i class="fa fa-newspaper-o" aria-hidden="true"></i> Tin tức & Sự kiện</h3>
            @foreach (var post in ViewData["Posts"] as List<University.Models.Post>)
            {
                <div class="row mb-3 li">
                    <div class="col-md-4">
                        <img src="/img/@post.PostImage" class="img-fluid" alt="Post Image">
                    </div>
                    <div class="col-md-8">
                        <a href="/Home/PostDetail/@post.PostId">
                            <h4>@post.Title</h4>
                            <p>Date: @post.PublishedDate</p>
                        </a>
                    </div>
                </div>
            }
        </div>

        <!-- Danh sách thông báo -->
        <div class="col-md-4">
            <h3><i class="fa fa-bell-o" aria-hidden="true"></i> Thông báo</h3>
            @foreach (var announcement in ViewData["Announcements"] as List<University.Models.Announcement>)
            {
                <div class="row mb-3 li">
                    <div class="col-md-4">
                        <p>Date: @announcement.PublishedDate</p>
                    </div>
                    <div class="col-md-8">
                        <a href="/Home/AnnouceDetail/@announcement.AnnouncementId">
                            <h4>@announcement.Title</h4>
                        </a>
                    </div>
                </div>
            }
        </div>

       

        <!-- Phần hiển thị hình ảnh -->
        <div class="col-md-4">
            <div class="pb-3 embed-responsive embed-responsive-16by9">
                <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/h8hott2tjes" allowfullscreen></iframe>
            </div>
            <img class="pb-3 pt-3" src="~/img/link1.jpg" />
            <img src="~/img/link3.jpg" />
        </div>

    </div>
    <!-- Danh sách sự kiện -->
    <div class="row mt-5">
        <!-- Danh sách sự kiện -->
        <div class="col-md-12">
            <h3 class="section-title"><i class="fa fa-calendar" aria-hidden="true"></i> Sự kiện</h3>
            <div class="row">
                @foreach (var studentEvent in ViewData["Events"] as List<University.Models.StudentEvent>)
                {
                    <div class="col-md-4">
                        <div class="card card-custom">
                            <div class="card-header-custom">
                                <h4 class="card-title">
                                    <a href="/Home/EventDetail/@studentEvent.EventId">@studentEvent.EventName</a>
                                </h4>
                            </div>
                            <div class="card-body-custom">
                                <p><strong>Ngày:</strong> @studentEvent.EventDate</p>
                                <p><strong>Thời gian:</strong> @studentEvent.StartTime - @studentEvent.EndTime</p>
                                <p><strong>Địa điểm:</strong> @studentEvent.Location</p>
                                <p><strong>Người tổ chức:</strong> @studentEvent.Organizer</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
